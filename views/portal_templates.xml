<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="cl_portal_my_home" inherit_id="account.portal_my_home_invoice" name="My Portal custom">
        <xpath expr="//li[hasclass('list-group-item')]" position="replace">
            <t t-if="user_is_company">
                <li t-if="invoice_count" class="list-group-item">
                    <span class="badge" t-esc="invoice_count"/>
                    <a href="/my/invoices">Invoices</a>
                </li>
            </t>
        </xpath>
    </template>
</odoo>