<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="cl_portal_my_home" inherit_id="portal.portal_my_home" name="My Portal custom">
        <xpath expr="//li[hasclass('list-group-item')]" position="replace">
            <li t-if="invoice_count" class="list-group-item">
                <span class="badge" t-esc="invoice_count"/>
                <a href="/my/invoices">Facturos</a>
            </li>
        </xpath>
    </template>
</odoo>